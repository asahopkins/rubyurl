<% form_for :link, @link, :url => {:controller => :links ,:action => 'create'}  do |f| %>
  <label for="link_website_url">Create a tinyThom.as Link (original starts with "<a href="http://thomas.loc.gov/">http://thomas.loc.gov/</a>...")</label>
  <%= f.text_field :website_url %>
  
  <%= submit_tag 'Go!', :class => 'go' -%>
<% end %>

